* {
    margin: 0;
}
h3 {
    margin: 0 !important;
    font-size: 1em;
}
p {
    margin: 0 5px 0 5px;
}

.banner {
    height: 150px;
    border-bottom: 3px solid burlywood;
    background: linear-gradient(169deg, #025297, #e7e689);
}

.portrait {
    height: 120px;
}

.flex {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.flex-one {
    flex: 1;
    height: auto;
    width: auto;
}

.flex-one img {
    vertical-align: top;
}

.fill {
    height: 100%;
    width: 100%;    
}

.start {
    color: red;
}

.inline-block {
    display: inline-block;
}

.text-right {
    text-align: right;
}

.text-left {
    text-align: left;
}

.character-info {
    font-size: 13px;
    line-height: 150%;
    color: white;
    .text-left {

    }
}

.job {
    border-radius: 4px;
    padding: 8px 8px 6px 8px;
    background-color: rgba(20, 20, 20, 0.3);
    margin-bottom: 16px;
    color: greenyellow;
}

.advania {
    max-height: 82px;
    max-width: 69px;    
}
.content {
    max-width:1000px; 
    margin:auto
}

.navigation {
    height: 40px;
    width: 22%;
    display: block;
    align-self: center;
    cursor: pointer;
    background-color: navajowhite;
    border-radius: 8px;
    margin: 0 0px 12px 0px;
    text-align: center;
    font-weight: 700;
    margin-left: 8px;
}

.social {
    height: 40px;
    width: 22%;
    cursor: pointer;
    background-color: navajowhite;
    border-radius: 8px;
    margin: 0 8px 12px 8px;
    align-self: center;

}

.linkedIn {
    height: 24px;    
    margin: 8px 0 8px 0;
}

@media only screen and (max-width: 999px)  {

}

@media only screen and (min-width: 600px)  {
    .character-info {
        padding-left:5px;
        .text-right {
            
            font-weight: 450;
        }
        .text-left {
            margin-left: 5px;
            font-weight: 600;
        }
    }
}


body {

    min-height: 100vh;
    height: 100vh;
    width: 100vw;
    position: relative;
    background: linear-gradient(45deg, #290B4F, #E7E689);
    background-attachment: fixed;
}

h3 {
  margin 40px 0 0
}

ul {
  list-style-type none
  padding 0
}

li {
  display inline-block
  margin 0 10px
}

a {
  color #42b983
}

html {
    height: 100vh;
    width: 100vw;
    position: relative;
}

#app {
    font-family Avenir, Helvetica, Arial, sans-serif
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    text-align center
    color #2c3e50
    height: 100vh;
    width: 100vw;
}